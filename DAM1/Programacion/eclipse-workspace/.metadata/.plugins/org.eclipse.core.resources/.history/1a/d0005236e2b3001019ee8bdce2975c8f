package defecto;
import java.util.*;
import java.util.regex.Pattern;
import java.util.regex.Matcher;
public class EGP3_10 {

	public static void main(String[] args) {
		Scanner teclado = new Scanner(System.in);
		Pattern Juan = Pattern.compile("\\d{8}");
		boolean DNICorrecto = false;
		while(DNICorrecto== false){
			String DNI = teclado.nextLine();
			Matcher coincidencia = Juan.matcher(DNI);
			if (coincidencia.find() == false) {
				System.out.println("DNI incorrecto, vuelve a intentar");
			}
			else {
				System.out.println("DNI v√°lido");
				DNICorrecto = true;			
			}
		}
		teclado.close();
		
		
		
	}

}

package defecto;
import java.util.*;
public class EjAparte_0_1 {

	public static void main(String[] args) {
		Scanner teclado = new Scanner(System.in);
		System.out.println("lanzadordedadoshastaqueseantodosigualesinador versi√≥n 1.0");
		System.out.print("Introduce los dados a tirar: ");
		int dados = teclado.nextInt();
		teclado.close();
		boolean tresIguales= false;
		int contador = 0;
		int tandaNumeros[] = new int[dados];
		int estasdisticas[] = new int[6];
		
		do {
		for (int i=0; i<dados; i++) {
			int random = (int)(Math.random()*6)+1;
			tandaNumeros[i] = random;
			System.out.print(random);
			switch(random) {
			case 1:
				estasdisticas[0]++;
				break;
			case 2:
				estasdisticas[1]++;
				break;
			case 3:
				estasdisticas[2]++;
				break;
			case 4:
				estasdisticas[3]++;
				break;
			case 5:
				estasdisticas[4]++;
				break;
			case 6:
				estasdisticas[5]++;
				break;
				
			}
			if(i<dados-1)
				System.out.print(" - ");
			else 
				System.out.println();
			}
		tresIguales=true;
		for(int i=1; i<dados; i++) {
			if(tandaNumeros[0]!=tandaNumeros[i])
				tresIguales=false;
		}
		contador++;
		}while(tresIguales==false);
		for(int num:estasdisticas)
			System.out.print(estasdisticas[num]+", ");
		System.out.println("Ha tomado " + contador + " tiradas para que todos los dados sean iguales.");
	

	}

}
